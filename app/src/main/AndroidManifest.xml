<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".util.MatuleApplication"
        android:theme="@style/Theme.Matule"
        tools:targetApi="31">
        <activity
            android:name=".activities.Profile"
            android:exported="true"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.Notifications"
            android:exported="true"
            android:label="@string/title_activity_notifications"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activities.OTPCheck"
            android:exported="true"
            android:label="@string/title_activity_otpcheck"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ForgotPassword"
            android:exported="true"
            android:label="@string/title_activity_forgot_password"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Register"
            android:exported="true"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Details"
            android:exported="true"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Search"
            android:exported="true"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Cart"
            android:exported="true"
            android:label="@string/title_activity_cart"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Favorite"
            android:exported="false"
            android:label="@string/title_activity_favourite"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ScopeProducts"
            android:exported="true"
            android:label="@string/title_activity_scope_products"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.MainMenu"
            android:exported="true"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.Greeting"
            android:exported="true"
            android:label="@string/title_activity_greeting"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Splash"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Login"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Matule"
            android:screenOrientation="portrait" />
    </application>

</manifest>